<div class="container top-down">
	<div class="page-header center">
		<h1>Forgot Your Password?</h1>
	</div>
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-default">
			<div class="panel-body">
				<%= form_tag password_resets_path, :method => :post do %>
				  <div class="field form-group">
				    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
				  </div>
				  <div class="actions"><%= submit_tag "Reset Password", class: "btn btn-lg btn-primary btn-block" %></div>
				<% end %>
			</div>
			<div class="panel-footer">
				Your password reset instructions will be emailed to you.
			</div>
		</div>
	</div>
</div>